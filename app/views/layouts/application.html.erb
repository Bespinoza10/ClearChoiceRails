<!DOCTYPE html>
<html>
<head>
  <title>ClearChoiceRails</title>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body id="page-top" class="index">
  <% if notice %>
  <div id="notice-wrapper">
    <p class="notice"><%= notice %></p>
  </div>
<%elsif alert%>
  <div id="notice-wrapper">
    <p class="alert"><%= alert %></p>
  </div>
<%end%>

<div class="navbar-fixed">
  <nav class="cc_nav">
    <div class="nav-wrapper">
      <div class="container">
        <%= link_to image_tag("CC_new_logo_Wblue.png", :alt => "Clear Choice"), root_path, :class => "brand-logo" %>
        <a href="" data-activates="mobile-demo" class="button-collapse"><i class="material-icons dehaze" style="color: #000;">dehaze</i></a>
        <ul class="right hide-on-med-and-down nav-links">
          <li><%= link_to "Home", root_path %></li>
          <li><a href="#about">About Us</a></li>
          <li><a href="#services">Services</a></li>
          <% if user_signed_in? %>
            <li><a class="dropdown-button" href="#dropdown1" data-activates="dropdown1">Clients<i class="material-icons right">arrow_drop_down</i></a></li>
            <ul id="dropdown1" class="dropdown-content">
              <li><%= link_to "All Clients", clients_path %></li>
              <li><%= link_to "New Clients", new_client_path %></li>
            </ul>
            
            <li><a class="dropdown-button" data-activates="dropdown2">Cities<i class="material-icons right">arrow_drop_down</i></a></li>
            <ul id="dropdown2" class="dropdown-content">
              <li><%= link_to "All Cities", cities_path %></li>
              <li><%= link_to "New City", new_city_path %></li>
            </ul>
            
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <%else%>
            <li><%= link_to "Sign In", new_user_session_path%></li>
          <%end%>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <li><%= link_to "Home", root_path %></li>
          <li><a href="#about">About Us</a></li>
          <li><a href="#services">Services</a></li>
          <% if user_signed_in? %>
            <li><a class="dropdown-button" href="#!" data-activates="dropdown3">Clients<i class="material-icons right">arrow_drop_down</i></a></li>
            <ul id="dropdown3" class="dropdown-content">
              <li><%= link_to "All Clients", clients_path %></li>
              <li><%= link_to "New Clients", new_client_path %></li>
            </ul>
            <li><a class="dropdown-button" href="#!" data-activates="dropdown4">Cities<i class="material-icons right">arrow_drop_down</i></a></li>
            <ul id="dropdown4" class="dropdown-content">
              <li><%= link_to "All Cities", cities_path %></li>
              <li><%= link_to "New City", new_city_path %></li>
            </ul>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <%else%>
            <li><%= link_to "Sign In", new_user_session_path%></li>
          <%end%>
        </ul>
      </div>
    </div>
  </nav>
</div>

<script>
    $(".button-collapse").sideNav();
    $(".dropdown-button").dropdown();
</script>

<%= yield %>

