<div class="container sections">
  <div class="row">
    <div class="col s12 title-dark">
      <div class="col s2 hr-line">
        <hr>
      </div>
      <br>
      <h1><%= @city.name %> Information</h1>
      <h5><b><i class="material-icons" style="font-weight: bold;">arrow_back</i></b> <%= link_to "All Cities", cities_path %></h5>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s12 l12">
      <div class="col s12 l12">
        <h3>Name: <b><%=@city.name%></b> </h3>
        <%= link_to "Edit", edit_city_path(@city), class: "btn orange" %>
        <%= link_to "Delete", city_path(@city), method: :delete, data: {confirm: "Estas seguro que quieres borrar este cliente?"}, class: "btn red" %>
      </div>
      
      <div class="col s12 l12" style="margin-top: 6%;">
        <h3><%= @city.name%> Clients</h3>
      </div>
      <% @city.clients.each do |client| %>
        <div class="clients col s12 m6 l4">
          <div class="card">
            <div class="card-content white-text">
              <span class="card-title"><%= link_to client.business, client %></span>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>