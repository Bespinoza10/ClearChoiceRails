<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-sm-6 center-block">
        <%= form_for @client do |f| %>
          <% if @client.errors.any?%>
            <h2><%= pluralize(@client.errors.count, "error") %> prevented this client from saving:</h2>
            <ul>
              <% @client.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <%end%>
            </ul>
          <%end%>

          <div class="form-group">
            <%= f.label :business %>
            <%= f.text_field :business, {class: 'form-control city-client'} %>
          </div>

          <div class="form-group">
            <%= f.label :city %>
            <%= f.collection_select :city_id, City.all, :id, :name%>
          </div>

          <div class="form-group">
            <%= f.label :owner_or_manager %>
            <%= f.text_field :owner_or_manager, {class: 'form-control city-client'} %>
          </div>

          <div class="form-group">
            <%= f.label :number %>
            <%= f.text_field :number, {class: 'form-control city-client'} %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, {class: 'form-control city-client'} %>
          </div>

          
          <button type="submit" class="btn sendbtn">Submit</button>

        <%end%>
      </div>
    </div>
  </div>
</div>