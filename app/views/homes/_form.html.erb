<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-sm-6 center-block">
        <%= form_for @home do |f| %>
          <% if @home.errors.any?%>
            <h2><%= pluralize(@home.errors.count, "error") %> prevented this client from saving:</h2>
            <ul>
              <% @home.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <%end%>
            </ul>
          <%end%>



          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, {class: 'form-control city-client'} %>
          </div>

          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_field :address, {class: 'form-control city-client'} %>
          </div>




          <button type="submit" class="btn sendbtn">Submit</button>

        <%end%>
      </div>
    </div>
  </div>
</div>
