<header>
  <div class="container">
    <div class="intro-form">
      <div class="col-md-6 center-block">
        <h1 class="cH center">Get in Touch with Us</h1>
        <h4 class="cH center">We'd love to hear from you.</h4>
        <div>
          <%= form_for @contact do |f| %>
            <div class="form-group">
              <%= f.label :name, class: "cH" %>
              <%= f.text_field :name, required: true, class: "form-control", :placeholder => "Your Name" %>
            </div>


            <div class="form-group">
              <%= f.label :email, class: "cH" %>
              <%= f.email_field :email, required: true, class: "form-control", :placeholder => "Your Email" %>
            </div>


            <div class="form-group">
              <%= f.label :message, class: "cH" %>
              <%= f.text_area :message, as: :text, class: "form-control", :cols => "30", :placeholder => "Your Message", :rows => "10" %>
            </div>


            <div class="form-group hidden">
              <%= f.label :nickname %>
              <%= f.text_field :nickname, hint: 'leave this field blank' %>
            </div>


            <%= f.submit 'Yes! Send It!', class: "btn sendbtn" %>


          <%end%>
        </div>
      </div>
    </div>
  </div>
</header>
