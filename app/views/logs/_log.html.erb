<div class="container">
  <div class="row">
    <div class="col s12 l12">
      <h1>Service Log for <%= @client.business%></h1>
      <table>
        <thead>
          <tr>
              <th>Business Name</th>
              <th>Date</th>
              <th>Service</th>
              <th>Payment Status</th>
              <th>Amount</th>
              <th>Edit</th>
              <th>Delete</th>
          </tr>
        </thead>

        <tbody>
          <% @logs.each do |log| %>
          <tr>
            <td><%= @client.business%></td>
            <td><%= log.date_of_service %></td>
            <td><%= log.service %></td>
            <td><%= log.payment_status %></td>
            <td><%= log.amount %></td>
            <td><%= link_to "Edit", edit_client_log_path(log.client, log), class: "btn orange" %></td>
            <td><%= link_to "Delete", [log.client, log], method: :delete, data: {confirm: "Are you sure you want to DELETE this LOG?"}, class: "btn red" %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      <br>
      <%= link_to "Add a new Log", new_client_log_path(@client, @log), class: "btn blue"%>
    </div>
  </div>
</div>
