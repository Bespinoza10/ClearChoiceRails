<div class="container">
  <div class="row">
    <div class="col s12 l12">
      <h1>Service Log for <%= @client.business%></h1>
      <table>
        <thead>
          <tr>
              <th>Business Name</th>
              <th>Date</th>
              <th>Service</th>
              <th>Payment Status</th>
              <th>Amount</th>
              <th>Edit</th>
              <th>Delete</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @client.business%></td>
            <td><%= log.date%></td>
            <td><%= log.service%></td>
            <td><%= log.payment_status %></td>
            <td><%= log.amount %></td>
            <td><%= link_to "Edit", edit_log_path(log), class: "btn orange" %></td>
            <td><%= link_to "Delete", log_path(log), method: :delete, data: {confirm: "Estas seguro que quieres borrar este log?"}, class: "btn red" %></td>
          </tr>
        </tbody>
      </table>
      <br>
      <%= link_to "Add a new Log", new_log_path, class: "btn blue"%>
    </div>
  </div>
</div>
